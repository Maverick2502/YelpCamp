<% layout("layouts/boilerplate")%>
            <div class="row">
                <h1 class="text-center">Edit Campground</h1>
                <div class="col-6 offset-3">
                    <form class="validated-form" action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" enctype="multipart/form-data" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input class="form-control" id="title" type="text" name="campground[title]" value="<%=campground.title%>" required>
                            <div class="valid-feedback">
                                1/5
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input class="form-control" id="location" type="text" name="campground[location]" value="<%=campground.location%>" required>
                            <div class="valid-feedback">
                                2/5
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="price">Campground Price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">$</span>
                                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                                    aria-describedby="price-label" name="campground[price]" value="<%=campground.price%>" required>
                                <div class="valid-feedback">
                                    3/5
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" id="description" type="text"
                                name="campground[description]" required><%=campground.description%></textarea>
                            <div class="valid-feedback">
                                4/5
                            </div>
                        </div>
                        <div class="mb-3">
                            <input class="form-control" type="file" id="formFile" name="image" multiple>
                            <label for="formFile" class="form-label" for="image"></label>
                            <div class="valid-feedback">
                                5/5
                            </div>
                        </div>
                        <div class="mb-3">
                            <% campground.images.forEach(function(img, i) { %>
                                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                                <div class="form-check-inline">
                                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                            <button class="btn btn-danger d-block" for="image-<%=i%>">Delete</button>

                                </div>
                                    <!-- <label class="btn" for="image-<%=i%>">Delete?</label> -->
                            <!-- <button class="btn btn-danger d-block" for="image-<%=i%>">Delete</button> -->

                                <% })%>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success mb-1">Update Campground</button>
                            <a class="btn btn-secondary" href="/campgrounds/<%= campground._id%>">Back to campground</a>
                        </div>
                    </form>
                </div>
            </div>